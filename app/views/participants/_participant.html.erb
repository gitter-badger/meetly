<tr class="<%= dom_id(participant) %>" style="outline: thin solid"  >
 
    <td><%= participant.name%></td>
    <td><%=participant.surname%></td>
    <td><%=participant.age%></td>
    <td><%=participant.city%></td>
    <td><%=participant.email%></td>
    <td><%=participant.phone%></td>
    <td><%=participant.role.name%></td>
    <td><%=participant.cost%></td>
    <td><%=participant.paid%></td>
    <td><%=participant.cost - participant.paid %> </td>
    <td><%=participant.days.include?(Day.find_by_number(1))%></td>
    <td><%=participant.days.include?(Day.find_by_number(2))%></td>
    <td><%=participant.days.include?(Day.find_by_number(3))%></td>
    <td><%=participant.nights.include?(Night.find_by_number(1))%></td>
    <td><%=participant.nights.include?(Night.find_by_number(2))%></td>
    <td><%=participant.dinners.include?(Dinner.find_by_number(1))%></td>
    <td><%=participant.dinners.include?(Dinner.find_by_number(2))%></td>
    <td><%=participant.gender %></td>
    <td><%= participant.created_at%></td>
    <td><%=participant.payment_deadline%></td>
    <td><%= participant.get_status %></td>
    <td>
    <p>
    <%= link_to 'Wyślij potwierdzenie', payment_confirm_participant_path(participant), :method => :post, :data => {:confirm => 'Na pewno wysłać?'}, :remote => true %>
    </p>
    
    <%if participant.archived == false %>
      <p><%= link_to 'Archiwizuj', participant, :method => :delete, :data => {:confirm => 'Na pewno usunąć? Uczestnik otrzyma maila z potwierdzeniem!'} , :remote => true %></p>
        <p><%= link_to 'Usuń na zawsze', wipe_participant_path(participant), :method => :delete, :data => {:confirm => 'Usunąć NA ZAWSZE?'}, :remote => true %></p>
    <%else%>
     <%= link_to 'Przywróć', unarchive_participant_path(participant), :method => :patch, :data => {:confirm => 'Na pewno przywrócić?'}, :remote => true %>
    <%end%>
      
    </td>
    <td>
      <%= form_for participant, url: edit_payment_participant_path(participant) do |f| %>
        <strong>Zapłać:</strong>
        <%= f.number_field :paid %>
        <%= f.collection_select :role_id, Role.all, :id, :name %>        
        <%= f.submit "Zapiszz" %>
      <% end %>
    </td>   
</tr>