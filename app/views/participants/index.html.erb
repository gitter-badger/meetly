<h1>Lista uczestników</h1>
<table>
  <tr>
    <th>Imie</th>
    <th>Nazwisko</th>
    <th>Wiek</th>
    <th>Miasto</th>
    <th>E-mail</th>
    <th>Telefon</th>
    <th>Rola</th>
    <th>Koszt</th>
    <th>Zapłacono</th>
    <th>Dzien 1</th>
    <th>Dzien 2</th>
    <th>Dzien 3</th>
    <th>Nocleg 1</th>
    <th>Nocleg 2</th>
    <th>Obiad 1</th>
    <th>Obiad 2</th>
    <th>Plec</th>
    <th>Utworzony</th>
  </tr>

<% @participants.each do |participant| %>
<tr>
  <td><%= participant.name%></td>
  <td><%=participant.surname%></td>
  <td><%=participant.age%></td>
  <td><%=participant.city%></td>
  <td><%=participant.email%></td>
  <td><%=participant.phone%></td>
  <td><%=participant.role.name%></td>
  <td><%=participant.cost%></td>
  <td><%=participant.paid%></td>
  <td><%=!participant.days[0].nil?%></td>
  <td><%=!participant.days[1].nil?%></td>
  <td><%=!participant.days[2].nil?%></td>
  <td><%=!participant.nights[0].nil?%></td>
  <td><%=!participant.nights[1].nil?%></td>
  <td><%=!participant.dinners[0].nil?%></td>
  <td><%=!participant.dinners[1].nil?%></td>
  <td><%=participant.gender %></td>
  <td><%= participant.created_at%></td>
</tr>




<%end%>
</table>